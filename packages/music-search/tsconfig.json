{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../config/typescript/base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo"
    },
    "references": [
        { "path": "../shared-types" },
        { "path": "../shared-utils" }
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}