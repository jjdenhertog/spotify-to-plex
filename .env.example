# Spotify to Plex Environment Configuration
# Copy this file to .env.local for local development

# Server Configuration
PORT=9030
NODE_ENV=production

# Spotify API Configuration
SPOTIFY_API_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_API_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_API_REDIRECT_URI=http://localhost:9030/api/spotify/token

# Tidal API Configuration (Optional)
TIDAL_API_CLIENT_ID=your_tidal_client_id_here
TIDAL_API_CLIENT_SECRET=your_tidal_client_secret_here
TIDAL_API_REDIRECT_URI=http://localhost:9030/api/tidal/token

# Security
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32

# Plex Configuration
PLEX_APP_ID=eXf+f9ktw3CZ8i45OY468WxriOCtoFxuNPzVeDcAwfw=

# MQTT Configuration (Optional)
MQTT_HOST=
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=spotify-to-plex